<h1>Books</h1>


<% @books.each do |book| %>

<span><%= book.title %></span>
<span><%= book.body %></span>
<span><%= link_to "Show","/books/#{book.id}" %></span>
<span><%= link_to "Edit","/books/#{book.id}/edit" %></span>

<% end %>





<h1>New book</h1>

<%= form_with model:@book,local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>

<% end  %>